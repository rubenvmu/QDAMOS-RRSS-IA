<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - beMahou</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/mobile.css" asp-append-version="true" id="mobile-css" disabled />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    @RenderSection("Styles", required: false)
</head>
<body class="be-mahou-body">
    <!-- Navbar Desktop -->
    <nav id="be-mahou-desktop-nav" class="navbar navbar-expand-md navbar-light bg-light fixed-top">
        <div class="container">
            <a class="navbar-brand fw-bold text-uppercase fs-3" href="/">
                <i class="fas fa-beer me-2"></i>beMahou
            </a>
            
            <div class="d-flex align-items-center gap-3">
                <!-- Botón de cambio de vista -->
                <div class="btn-group shadow-sm be-mahou-view-toggle">
                    <button id="be-mahou-mobile-view" class="btn btn-outline-dark btn-sm" title="Vista móvil">
                        <i class="fas fa-mobile-alt"></i>
                    </button>
                    <button id="be-mahou-desktop-view" class="btn btn-dark btn-sm" title="Vista de escritorio">
                        <i class="fas fa-desktop"></i>
                    </button>
                </div>

                <!-- Menú principal -->
                <ul class="navbar-nav d-none d-lg-flex">
                    <li class="nav-item mx-2">
                        <a class="nav-link fw-bold" asp-page="/NuevaPublicacion">Conciertos</a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link fw-bold" asp-page="/Categoria/Quedadas">Quedadas</a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link fw-bold" asp-page="/Categoria/Sorteos">Sorteos</a>
                    </li>
                </ul>

                <!-- Contador de estrellas -->
                <div class="be-mahou-star-counter d-flex align-items-center ms-3">
                    <i class="fas fa-star text-warning me-1"></i>
                    <span class="fw-bold">5</span>
                </div>

                <!-- Login -->
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <main class="be-mahou-main-content">
        <div class="be-mahou-content-container">
            @RenderBody()
        </div>
    </main>

    <!-- Navbar Mobile -->
    <nav id="be-mahou-mobile-nav" class="navbar navbar-dark bg-danger fixed-bottom d-md-none">
        <div class="container-fluid px-0">
            <div class="d-flex justify-content-around w-100 align-items-center">
                <a href="/" class="be-mahou-mobile-nav-item text-white text-center py-2">
                    <i class="fas fa-home fa-lg d-block mb-1"></i>
                    <span class="small">Inicio</span>
                </a>
                <a href="/Categoria/Festival" class="be-mahou-mobile-nav-item text-white text-center py-2">
                    <i class="fas fa-music fa-lg d-block mb-1"></i>
                    <span class="small">Conciertos</span>
                </a>
                <a href="/NuevaPublicacion" class="be-mahou-mobile-nav-item text-white text-center py-2">
                    <div class="be-mahou-mobile-nav-center">
                        <i class="fas fa-plus-circle fa-2x"></i>
                    </div>
                </a>
                <a href="/Categoria/Quedadas" class="be-mahou-mobile-nav-item text-white text-center py-2">
                    <i class="fas fa-users fa-lg d-block mb-1"></i>
                    <span class="small">Quedadas</span>
                </a>
                <a href="/Perfil" class="be-mahou-mobile-nav-item text-white text-center py-2">
                    <i class="fas fa-user fa-lg d-block mb-1"></i>
                    <span class="small">Perfil</span>
                </a>
            </div>
        </div>
    </nav>

    <!-- Botón flotante para desktop -->
    <a href="/NuevaPublicacion" class="be-mahou-floating-btn btn btn-danger rounded-circle p-3 d-none d-md-flex">
        <i class="fas fa-plus fa-lg"></i>
    </a>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/feed.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>