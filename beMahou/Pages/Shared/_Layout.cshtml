<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - QDAMOS+IA+RRSS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/mobile.css" asp-append-version="true" id="mobile-css" disabled />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        :root {
            --be-mahou-red: #c8102e;
            --be-mahou-dark-red: #a50d26;
        }
        
        body.be-mahou-body {
            background-color: #ffffff;
        }
        
        /* Estilo para avatar circular */
        .be-mahou-user-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid var(--be-mahou-red);
        }
        
        /* Estilo para estrella roja Mahou */
        .be-mahou-star {
            color: var(--be-mahou-red) !important;
        }
        
        .be-mahou-star-counter .fa-star {
            color: var(--be-mahou-red) !important;
        }
        
        @@media (min-width: 701px) {
            .solo-movil {
                display: none !important;
            }
        }
        
        .be-mahou-stars-banner img {
            max-width: 40%;
            height: auto;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body class="be-mahou-body">
    <!-- Navbar Desktop -->
    <nav id="be-mahou-desktop-nav" class="navbar navbar-expand-md navbar-light bg-light fixed-top">
        <div class="container">
            <a class="navbar-brand fw-bold text-uppercase fs-3" href="/">
                <img src="/images/qdamos.png" alt="Mahou Blog" class="img-fluid my-3" style="max-width: 150px;">
            </a>
            
            <div class="d-flex align-items-center gap-3">
    <!-- Menú principal -->
    <ul class="navbar-nav d-none d-lg-flex">
        <li class="nav-item mx-2">
            <a class="nav-link fw-bold" href="/Mapa">Bares</a>
        </li>
        <li class="nav-item mx-2">
            <a class="nav-link fw-bold" href="/Conciertos">Podcast</a>
        </li>
        <li class="nav-item mx-2">
            <a class="nav-link fw-bold" href="/Quedadas">Quedadas</a>
        </li>
        <li class="nav-item mx-2">
            <a class="nav-link fw-bold" href="/Sorteos">Sorteos</a>
        </li>
        <li class="nav-item mx-2">
            <a class="nav-link fw-bold" href="/Festivales">Festivales</a>
        </li>
        <li class="nav-item mx-2">
            <a class="nav-link fw-bold" href="/Blog">Blog</a>
        </li>
    </ul>

    <!-- Contador de estrellas -->
    <div class="be-mahou-star-counter d-flex align-items-center ms-3">
        <i class="fas fa-star me-1"></i>
        <span class="fw-bold">1725</span>
    </div>

    <!-- Login con avatar circular -->
    <partial name="_LoginPartial" />
</div>
        </div>
    </nav>

    <!-- Banner de estrellas solo móvil -->
    <div class="be-mahou-stars-banner text-center solo-movil">
        <img src="/images/qdamos.png" alt="Mahou Blog" class="img-fluid my-3" style="max-width: 150px;">
        <img src="/uploads/stars.png" alt="Estrellas" class="img-fluid">
    </div>

    <!-- Contenido principal -->
    <main class="be-mahou-main-content">
        <div class="be-mahou-content-container">
            @RenderBody()
        </div>
    </main>

    <!-- Navbar Mobile -->
    <nav id="be-mahou-mobile-nav" class="navbar navbar-dark bg-danger fixed-bottom d-md-none">
        <div class="container-fluid px-0">
            <div class="d-flex justify-content-around w-100 align-items-center">
                <a href="/Mapa" class="be-mahou-mobile-nav-item text-white text-center py-2">
                    <i class="fas fa-beer-mug-empty fa-lg d-block mb-1"></i>
                    <span class="small">Bares</span>
                </a>
                <a href="/Conciertos" class="be-mahou-mobile-nav-item text-white text-center py-2">
                    <i class="fas fa-music fa-lg d-block mb-1"></i>
                    <span class="small">Conciertos</span>
                </a>
                <a href="/Quedadas" class="be-mahou-mobile-nav-item text-white text-center py-2">
                    <i class="fas fa-user-group fa-lg d-block mb-1"></i>
                    <span class="small">Quedadas</span>
                </a>
                <a href="/Sorteos" class="be-mahou-mobile-nav-item text-white text-center py-2">
                    <i class="fas fa-gift fa-lg d-block mb-1"></i>
                    <span class="small">Sorteos</span>
                </a>
                <a href="/Festivales" class="be-mahou-mobile-nav-item text-white text-center py-2">
                    <i class="fas fa-star fa-lg d-block mb-1"></i>
                    <span class="small">Festivales</span>
                </a>
                <a href="/Blog" class="be-mahou-mobile-nav-item text-white text-center py-2">
                    <i class="fas fa-star fa-lg d-block mb-1"></i>
                    <span class="small">Blog</span>
                </a>
            </div>
        </div>
    </nav>

    <!-- Botón flotante para desktop -->
    <a href="/Create" class="be-mahou-floating-btn btn btn-danger rounded-circle p-3 d-none d-md-flex">
        <i class="fas fa-plus fa-lg"></i>
    </a>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/feed.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
    <footer class="bg-dark text-white mt-5 py-4">
        <div class="container text-center">
            <div class="mb-2">
                <img src="/images/qdamos.png" alt="Mahou Logo" style="max-width: 120px;">
            </div>
            <div class="mb-2">
                <span class="fw-bold">QDAMOS+IA+RRSS</span> &copy; @DateTime.Now.Year · Mahou · Todos los derechos reservados
            </div>
            <div class="mb-2">
                <a href="/AvisoLegal" class="text-white-50 mx-2 text-decoration-none">Aviso Legal</a>
                <a href="/Privacidad" class="text-white-50 mx-2 text-decoration-none">Privacidad</a>
                <a href="/Contacto" class="text-white-50 mx-2 text-decoration-none">Contacto</a>
            </div>
            <div>
                <a href="https://twitter.com/mahou" class="text-white-50 mx-2" target="_blank"><i class="fab fa-twitter fa-lg"></i></a>
                <a href="https://instagram.com/mahou" class="text-white-50 mx-2" target="_blank"><i class="fab fa-instagram fa-lg"></i></a>
                <a href="https://facebook.com/mahou" class="text-white-50 mx-2" target="_blank"><i class="fab fa-facebook fa-lg"></i></a>
            </div>
        </div>
    </footer>
</body>
</html>