@page
@model MyApp.Namespace.IndexModel
@{
}
<!-- Leaflet CSS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
<!-- Contenedor del mapa -->
<div id="map" style="height: 400px;"></div>
<!-- Leaflet JS -->
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<script>
    // Inicializa el mapa centrado en Zaragoza
    var map = L.map('map').setView([41.6488, -0.8891], 13);

    // Añade el mapa base de OpenStreetMap
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '© OpenStreetMap contributors'
    }).addTo(map);

    // Añade un marcador en Zaragoza
    L.marker([41.6488, -0.8891]).addTo(map)
        .bindPopup('Zaragoza')
        .openPopup();
</script>
